{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['email', 'createdAt'])",
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
        },
        "familyEmails": {
          ".validate": "newData.hasChildren()"
        },
        "trustedNumber": {
          ".validate": "newData.isString() && newData.val().matches(/^\\+[1-9]\\d{1,14}$/)"
        }
      }
    },
    "devices": {
      "$deviceId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || !data.exists())",
        ".write": "auth != null && (data.child('userId').val() == auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['userId', 'deviceName', 'platform'])",
        "userId": {
          ".validate": "newData.val() == auth.uid"
        }
      }
    },
    "alerts": {
      "$alertId": {
        ".read": "auth != null && data.child('userId').val() == auth.uid",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'deviceId', 'type', 'timestamp'])",
        ".indexOn": ["userId", "deviceId", "timestamp", "type"]
      }
    },
    "tracking": {
      "$sessionId": {
        ".read": "auth != null && data.child('userId').val() == auth.uid",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'deviceId', 'active', 'startTime'])",
        "locations": {
          "$timestamp": {
            ".validate": "newData.hasChildren(['lat', 'lng', 'accuracy', 'timestamp'])"
          }
        },
        ".indexOn": ["userId", "deviceId", "active", "startTime"]
      }
    }
  }
}
